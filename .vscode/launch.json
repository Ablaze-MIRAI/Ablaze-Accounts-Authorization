{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Launch debug Backend",
      "cwd": "${workspaceFolder}/packages/backend",
      "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/env-cmd",
      "runtimeArgs": [
        "-f", "${workspaceFolder}/.environments/.env.development",
        "${workspaceFolder}/node_modules/.bin/tsnd", "--respawn",
        "-r", "tsconfig-paths/register",
        "--transpile-only",
        "--debug", "--inspect", "--"
      ],
      "console": "integratedTerminal",
      "program": "src/main.ts",
      "skipFiles": [
        "<node_internals>/**"
      ]
    }
  ]
}
