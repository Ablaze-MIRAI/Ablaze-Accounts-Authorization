{
  "packageManager": "yarn@4.2.2",
  "name": "ablaze-accounts-authorization",
  "version": "0.0.1",
  "license": "UNLICENSED",
  "private": true,
  "scripts": {
    "dev": "echo Please add to workspace prefix. `ft:` && exit 0",
    "ft:dev": "yarn workspace @a3/frontend dev",
    "bk:dev": "env-cmd -f .environments/.env.development yarn workspace @a3/backend dev",
    "bk:mgdev": "env-cmd -f .environments/.env.development yarn workspace @a3/backend mg:dev",
    "bk:mgdeploy": "env-cmd -f .environments/.env.production yarn workspace @a3/backend mg:deploy",
    "bk:generate": "yarn workspace @a3/backend generate",
    "bk:format": "yarn workspace @a3/backend format",
    "bk:studio": "env-cmd -f .environments/.env.development yarn workspace @a3/backend studio"
  },
  "workspaces": [
    "packages/*"
  ],
  "dependencies": {
    "@a3/common": "workspace:^",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "^20",
    "env-cmd": "^10.1.0",
    "eslint": "^8",
    "ts-node-dev": "^2.0.0",
    "tsc": "^2.0.4",
    "typescript": "^5"
  }
